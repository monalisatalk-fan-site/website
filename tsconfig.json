{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["workspaces/website/*"]
    },
    "types": [
      "node",
      "@nuxt/types",
      "@nuxtjs/firebase"
    ]
  }
}
